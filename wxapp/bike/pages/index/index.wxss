/**index.wxss**/
.hint{
  background-color: #ffffff;
  width: 90%;
  height: 40px;
  margin-top: 10px;
  margin-left: 5%;
  border-radius: 10px;
}
.hint-box{
  position: relative;
  text-align: center;
  line-height: 40px;
}
.text-item1{
  font-size: 12px;
  letter-spacing: 2px;
}
.text-item2{
  font-size: 12px;
  letter-spacing: 2px;
  color: #eb552d;
}
.hint-bike{
  position: absolute;
  width: 25px;
  height: 25px;
  top: 8px;
  left: 20px;
}
.hint-right{
  width: 15px;
  height: 15px;
  position: absolute;
  right: 20px;
  top: 13px;
}




.location{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.location-box{
  background-color: #fff;
  width: 275rpx;
  border-radius: 50px;
  text-align: center;
}
.search-pic{
